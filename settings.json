// Place your settings in this file to overwrite the default settings
{
    "editor.tabSize": 2,
    "git.confirmSync": false,
    "files.trimTrailingWhitespace": true,
    "search.exclude": {
      "coverage": true,
      "log": true
    },
  "window.zoomLevel": 0,
  "ruby.lint": {
    "rubocop": true
  },
  "workbench.editor.enablePreview": false,
  "editor.cursorStyle": "line",
  "editor.cursorBlinking": "phase",
  // colors!
  "workbench.colorTheme": "Quiet Light",
  "workbench.colorCustomizations": {
    // workbench/tabs
    "editor.background": "#EDEDE8",
    "editor.lineHighlightBackground": "#fcfce0",
    "tab.inactiveBackground": "#f7f7f4",
    "editorLineNumber.foreground": "#BE3410",
    // sidebar
    "sideBar.background": "#e2e2dc",
    "sideBarSectionHeader.background": "#f2f2ef",
    // input
    "input.background": "#f7f7f4",
    //activity
    "activityBar.background": "#bcbcb5",
    "activityBar.foreground": "#2a79d6",
    "activityBarBadge.background": "#BE3410",
    // titlebar
    "titleBar.activeBackground": "#ccccc3",
    "statusBar.background": "#2a79dd",
    "statusBarItem.activeBackground": "#2a79dd",
    "statusBar.noFolderBackground": "#2a79dd",
    // explorer
    "list.activeSelectionBackground": "#BE3410",
    "list.activeSelectionForeground": "#f7f7f4",
    "list.inactiveSelectionBackground": "#94b8e8",
    "list.focusBackground": "#94b8e8",
    "list.highlightForeground": "#2a79dd",
    // terminal
    "terminal.background": "#EDEDE8",
    "panel.background": "#e2e2dc",
    "panelTitle.activeForeground": "#BE3410",
    "panelTitle.inactiveForeground": "#bcbcb5"
  },
  "typescript.check.npmIsInstalled": false,
  "editor.dragAndDrop": false,
  "editor.minimap.enabled": false,
  "editor.renderIndentGuides":false,
  "editor.renderLineHighlight": "all",
  "workbench.editor.showIcons": false,
  "workbench.iconTheme": "nil",
  "git.enableSmartCommit": true,
  "git.autofetch": true,
  "git.promptToSaveFilesBeforeCommit": true
}